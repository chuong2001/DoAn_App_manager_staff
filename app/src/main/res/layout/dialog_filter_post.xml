<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/botron_edittext1"
    android:id="@+id/dialog_calendar_detail"
    android:padding="20dp"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:foreground="@drawable/animation_click"
        android:src="@drawable/icon_close_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bộ lọc tìm kiếm"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_time_start_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ:"
        android:textColor="@color/black"
        android:layout_marginTop="45dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <TextView
        android:id="@+id/txt_time_start_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29-11-2001"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:background="@drawable/border_outline_round"
        android:paddingRight="35dp"
        android:paddingLeft="5dp"
        android:paddingVertical="5dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <ImageView
        android:id="@+id/img_show_clock_time_start_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_clock"
        android:padding="5dp"
        android:foreground="@drawable/animation_click"
        app:layout_constraintBottom_toBottomOf="@+id/txt_time_start_post"
        app:layout_constraintEnd_toEndOf="@+id/txt_time_start_post"
        app:layout_constraintTop_toTopOf="@+id/txt_time_start_post" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_time_end_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đến:"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_time_start_post" />

    <TextView
        android:id="@+id/txt_time_end_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29-11-2001"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:background="@drawable/border_outline_round"
        android:paddingRight="35dp"
        android:paddingLeft="5dp"
        android:paddingVertical="5dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_time_start_post" />

    <ImageView
        android:id="@+id/img_show_clock_time_end_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_clock"
        android:foreground="@drawable/animation_click"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_time_end_post"
        app:layout_constraintEnd_toEndOf="@+id/txt_time_end_post"
        app:layout_constraintTop_toTopOf="@+id/txt_time_end_post" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_type_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại tin tức:"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_time_end_post" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/botron_edittext"
        android:backgroundTint="@color/blue"
        android:paddingHorizontal="25dp"
        android:foreground="@drawable/animation_click"
        android:text="Áp dụng"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_type_post" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_unfilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/border_outline_round_blue"
        android:foreground="@drawable/animation_click"
        android:paddingHorizontal="5dp"
        android:text="Thiết lập lại"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_type_post" />

    <TextView
        android:id="@+id/txt_type_post"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_outline_round"
        android:paddingVertical="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="35dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_time_end_post" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_type_post"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_arrow_drop_down"
        android:paddingVertical="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="35dp"
        android:scrollbarSize="16dp"
        android:foreground="@drawable/animation_click"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/txt_type_post"
        app:layout_constraintEnd_toEndOf="@+id/txt_type_post"
        app:layout_constraintTop_toTopOf="@+id/txt_type_post" />

</androidx.constraintlayout.widget.ConstraintLayout>